{{!-- {{name}} --}}

<h1>{{name.fullname}}</h1>

<p>{{empLen}}</p>

<form id="myForm">

<div>
    <label for="Name">Name</label>
    <input type="text"  value={{newName}} oninput={{action (mut newName) value="target.value"}} placeholder="Enter your Name">
</div>

<div>
    <label for="age">Age</label>
    <input type="text"  value={{newAge}} oninput={{action (mut newAge) value="target.value"}} placeholder="Enter your Age">
</div>
<div>
    <label for="salary">Salary</label>
    <input type="text"  value={{newSalary}} oninput={{action (mut newSalary) value="target.value"}} placeholder="Enter your Salary">
</div>

<input value="Submit" onclick={{action "addUser"}} type="button">
</form>

<table>
<thead>
    <th>Name</th>
    <th>Age</th>
    <th>Salary</th>   
</thead>
<tbody>
{{#each name.employees as |emp index|}}
<tr>
    <td>{{emp.name}}</td> 
         <td>{{emp.age}}</td> 
             <td>{{emp.salary}}</td>             
</tr>
{{/each}}
</tbody>
</table>   

<div>
<h2>List of employees</h2>
<ol id="employeelist">
{{#each name.employees as |emp ind|}}
    <li>
        Name:{{emp.name}}<br>
        Age:{{emp.age}}<br>
        Salary:{{emp.salary}}<br>
    </li>
{{/each}}
</ol>
</div>
