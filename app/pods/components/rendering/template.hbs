<h1 style="color: blueviolet;">TABLE</h1>


<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 25%;
margin-left: 0; 
  margin-right:0;
  margin-top: 10px;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr{
  background-color: #dddddd;
}
</style>





<table>
  <thead>
    <tr>
    <th>name</th>
    <th>age</th>
    <th>salary</th>
  </tr>
  </thead>
  <tbody>
     
{{#each employees as |employee|}}
<tr>
  <td>{{employee.name}}</td>
<td>{{employee.age}}</td>
<td>{{employee.salary}}</td>
</tr>

{{/each}}

  </tbody>
 
</table>